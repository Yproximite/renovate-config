{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    ":preserveSemverRanges",
    ":separateMultipleMajorReleases",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "composer",
    "npm",
    "github-actions"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "labels": [
    "dependencies"
  ],
  "php": {
    "labels": [
      "php"
    ]
  },
  "js": {
    "labels": [
      "javascript"
    ]
  },
  "patch": {
    "automerge": true,
    "labels": [
      "patch"
    ]
  },
  "minor": {
    "automerge": true,
    "labels": [
      "minor"
    ]
  },
  "major": {
    "labels": [
      "\uD83D\uDCA3 MAJOR"
    ]
  },
  "packageRules": [
    {
      "description": "Group PHPStan packages",
      "groupName": "phpstan packages",
      "matchPackagePatterns": [
        "^phpstan\\/"
      ]
    },
    {
      "description": "Group ESLint packages",
      "groupName": "eslint packages",
      "matchPackageNames": [
        "eslint",
        "@babel/eslint-parser",
        "@yproximite/eslint-config-generator"
      ],
      "matchPackagePatterns": [
        "^eslint-plugin\\/"
      ]
    }
  ]
}
